// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  coins       Int         @default(0)
  crystals    Int         @default(0)
  coinsHourly Int         @default(10)
  referances  Referance[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Referance {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  referencedId    Int
  referancedName  String
  referenceAmount Int
  isClaimed       Boolean  @default(false)
  createdAt       DateTime @default(now())
}

model Card {
  id           Int    @id @default(autoincrement())
  name         String
  image        String
  category     String
  level        Int    @default(1)
  hourlyIncome Int
  upgradeCost  Int
}
